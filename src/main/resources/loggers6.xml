<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
 		http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

	<bean id="eventLogger" class="x025.SpringBasicsLessons.SpringBasicsLesson6.loggers.ConsoleEventLogger" />

	<bean id="fileEventLogger" class="x025.SpringBasicsLessons.SpringBasicsLesson6.loggers.FileEventLogger"
		init-method="init">
		<constructor-arg value="target/events_log.txt"/>
	</bean>
	
	<bean id="cacheFileEventLogger" class="x025.SpringBasicsLessons.SpringBasicsLesson6.loggers.CacheFileEventLogger"
		destroy-method="destroy" parent="fileEventLogger">
		<constructor-arg index="1" value="5"/>
	</bean>

</beans>